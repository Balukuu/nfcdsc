<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SettingsActivity"
    android:background="@drawable/ic_new_bg">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="350dp"
        android:layout_height="654dp"
        android:background="@drawable/design"
        android:orientation="horizontal"
        android:padding="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.338">

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/history_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="45dp"
            android:text="@string/acc_details"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2"
            android:textColor="@color/design_default_color_primary_dark"
            android:textSize="24sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/user_avatar"
            android:layout_width="78dp"
            android:layout_height="78dp"
            android:layout_marginTop="24dp"
            android:contentDescription="@string/user_avatar"
            android:src="@drawable/ic_launcher_foreground"
            android:tint="@color/design_default_color_primary_dark"
            app:layout_constraintEnd_toEndOf="@+id/history_txt"
            app:layout_constraintHorizontal_bias="0.503"
            app:layout_constraintStart_toStartOf="@+id/history_txt"
            app:layout_constraintTop_toBottomOf="@+id/history_txt" />

        <LinearLayout
            android:id="@+id/names"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="12dp"
            android:layout_marginTop="15dp"
            app:layout_constraintEnd_toEndOf="@+id/user_avatar"
            app:layout_constraintStart_toStartOf="@+id/user_avatar"
            app:layout_constraintTop_toBottomOf="@+id/user_avatar">

            <TextView
                android:id="@+id/user_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="20dp"
                android:layout_marginRight="20dp"
                android:text="@string/username"
                android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                android:textColor="@color/design_default_color_primary_dark"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/names_editText"
                android:layout_width="131dp"
                android:layout_height="wrap_content"
                android:autofillHints=""
                android:inputType="text"
                android:textAlignment="textEnd"
                android:text="@string/balance"
                android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                android:textColor="@color/design_default_color_primary_dark"
                android:textSize="14sp"
                tools:ignore="LabelFor"
                android:gravity="end" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/acc_bal"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:padding="12dp"
            android:layout_marginTop="15dp"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="@+id/names"
            app:layout_constraintStart_toStartOf="@+id/names"
            app:layout_constraintTop_toBottomOf="@+id/names">

            <TextView
                android:id="@+id/settings_acc_bal"
                android:layout_height="wrap_content"
                android:layout_marginRight="20dp"
                android:layout_marginEnd="20dp"
                android:text="@string/settings_acc_bal"
                android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                android:textColor="@color/design_default_color_primary_dark"
                android:textSize="16sp"
                android:layout_width="wrap_content" />

            <EditText
                android:id="@+id/settings_balance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:autofillHints=""
                android:inputType="text"
                android:textAlignment="textEnd"
                android:text="@string/balance"
                android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                android:textColor="@color/design_default_color_primary_dark"
                android:textSize="14sp"
                tools:ignore="LabelFor"
                android:layout_gravity="end" />

        </LinearLayout>


        <LinearLayout
            android:id="@+id/phone_num"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:padding="12dp"
            android:layout_marginTop="15dp"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="@+id/acc_bal"
            app:layout_constraintStart_toStartOf="@+id/acc_bal"
            app:layout_constraintTop_toBottomOf="@+id/acc_bal">

            <TextView
                android:id="@+id/settings_phone"
                android:layout_height="wrap_content"
                android:layout_marginRight="20dp"
                android:layout_marginEnd="20dp"
                android:text="@string/username"
                android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                android:textColor="@color/design_default_color_primary_dark"
                android:textSize="16sp"
                android:layout_width="wrap_content" />

            <EditText
                android:id="@+id/settings_phone_editTxt"
                android:layout_width="138dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="0dp"
                android:layout_marginRight="0dp"
                android:autofillHints="no"
                android:gravity="end"
                android:inputType="phone"
                android:text="@string/balance"
                android:textAlignment="textEnd"
                android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                android:textColor="@color/design_default_color_primary_dark"
                android:textSize="14sp"
                tools:ignore="LabelFor" />

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>